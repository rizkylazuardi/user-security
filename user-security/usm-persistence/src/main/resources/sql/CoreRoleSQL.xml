<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.anabatic.usm.persistence.dao.CoreRole">
	<cache />
	
	<sql id="fieldNames">
		(userid,"isActive","isLogin")
	</sql>
	<sql id="valueName">
		(#{userid},#{isActive},#{isLogin})
	</sql>
	<sql id="updateFieldName">
				userid = #{userid},
				"isActive" = #{isActive},
				"isLogin" = #{isLogin}
	</sql>
	<select id="findAll" resultType="CoreRole">
		<include refid="Generic.findAll"></include>
	</select>
	<insert id="insert" >
		<include refid="Generic.insert">
			<property name="fieldNames" value="com.anabatic.usm.persistence.dao.CoreRole.fieldNames"/>
			<property name="valueName" value="com.anabatic.usm.persistence.dao.CoreRole.valueName"/>
			<property name="updateFieldName" value="com.anabatic.usm.persistence.dao.CoreRole.updateFieldName"/>
		</include>
	</insert>
	<select id="get" resultType="CoreRole">
		<include refid="Generic.get"></include>
	</select>
	<delete id="delete">
		<include refid="Generic.delete"></include>
	</delete>
	<update id="updateShowBalance">
		update core_role set "showBalance" = #{showBalance} where userid = '${userid}'
	</update>
	<update id="updateLanguage">
		update core_role set "language" = #{language} where userid = '${userid}'
	</update>
	
	<select id="getAllRole" resultType="java.lang.Integer">
		select count(1) from core_role 
	</select>
	
	<select id="getRoleById" resultType="CoreRole">
		select * from core_role where id=#{id}
	</select>
</mapper>